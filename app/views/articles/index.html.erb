<div class="row mb-3">
  <div class="col-12">
    <%= link_to "Nuovo", new_article_draft_path, class: "btn btn-primary float-right" %>
  </div>
</div>
<div class="card">
  <div class="card-body p-0">
    <table class="table table-bordered">
      <thead>
      <tr>
        <th>#</th>
        <th>Nome</th>
        <th>Descrizione</th>
        <th>Prezzo</th>
        <th>Azioni</th>
      </tr>
      </thead>
      <tbody>
      <% @articles.each do |article|  %>
      <tr>
        <td><%= article.id %></td>
        <td><%= article.name %></td>
        <td><%= article.description %></td>
        <td><%= article.price %></td>
        <td>
          <%= link_to "Modifica", edit_article_path(article), class: "btn btn-warning"%>
          <%= link_to "Elimina", article_path(article), data: {
            turbo_method: :delete,
            turbo_confirm: "Sei sicuro?"
          }, class: "btn btn-danger"%>
        </td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>